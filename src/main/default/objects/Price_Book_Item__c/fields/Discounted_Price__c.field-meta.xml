<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Discounted_Price__c</fullName>
    <externalId>false</externalId>
    <formula>IF(IsPickVal(Pricing_Method__c,"Straight Price"), Price__c  * (1 -  Discount_Percent__c ), null)</formula>
    <formulaTreatBlanksAs>BlankAsZero</formulaTreatBlanksAs>
    <inlineHelpText>Discounted price of the price book item.</inlineHelpText>
    <label>Discounted Price</label>
    <precision>18</precision>
    <required>false</required>
    <scale>2</scale>
    <trackHistory>false</trackHistory>
    <type>Currency</type>
</CustomField>
