<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Locked_Description</fullName>
    <active>true</active>
    <errorConditionFormula>AND(PBI_Locked_Description__c , ISCHANGED(Description__c))</errorConditionFormula>
    <errorDisplayField>Description__c</errorDisplayField>
    <errorMessage>Cannot change the description as it is locked.</errorMessage>
</ValidationRule>
