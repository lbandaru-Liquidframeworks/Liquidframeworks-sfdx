<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Locked_Discount</fullName>
    <active>true</active>
    <errorConditionFormula>AND(PBI_Locked_Discount__c , ISCHANGED(Discount_Percent__c))</errorConditionFormula>
    <errorDisplayField>Discount_Percent__c</errorDisplayField>
    <errorMessage>Cannot change the discounted percent as the discount is locked.</errorMessage>
</ValidationRule>
